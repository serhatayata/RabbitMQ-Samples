
@{
    ViewData["Title"] = "WordToPdfPage";
}

@model WordToPdf

<h1>WordToPdfPage</h1>
<h3>@ViewBag.result</h3>
<div class="row">
    <div class="col-md-4">
        <form asp-action="WordToPdfPage" method="post" enctype="multipart/form-data">
            <div class="form-group">
                <label asp-for="WordFile" class="form-label"></label>
                <input asp-for="WordFile" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Email" class="form-label"></label>
                <input asp-for="Email" class="form-control" />
            </div>
            <div class="form-group">
                <input type="submit" value="Dönüştür" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
